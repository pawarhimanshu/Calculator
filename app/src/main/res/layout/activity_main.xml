<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context="com.example.himanshu.calculator.MainActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:orientation="vertical"
        android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="3">

    <TextView android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:maxLines="1"
        android:autoSizeMinTextSize="18sp"
        android:autoSizeTextType="uniform"
        android:textSize="52sp"
        android:paddingRight="8dp"
        android:autoSizeMaxTextSize="52sp"
        android:gravity="center_vertical|end"
        android:id="@+id/stack"/>


    <TextView android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:textSize="24sp"
        android:paddingRight="8dp"
        android:gravity="center_vertical|end"
        android:id="@+id/result"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

</LinearLayout>


    <LinearLayout android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="7">


    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0px"
        android:layout_weight="4">


    <LinearLayout android:orientation="horizontal"
        android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="7"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            tools:background="@android:color/white" />

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="8"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            tools:background="white" />

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="9"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="4"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="5"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="6"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="1"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="2"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="3"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:textSize="18sp">

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="point"
            android:text="."
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="value"
            android:text="0"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <Button
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="equal"
            android:text="="
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

</LinearLayout>

</LinearLayout>


    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0px"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="clear"
            android:text="DEL"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="operation"
            android:text="/"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="operation"
            android:text="*"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="operation"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:onClick="handleClick"
            android:tag="operation"
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

</LinearLayout>

</LinearLayout>

</LinearLayout>